<div class="main posts-show">
  
  <div class="container">
    <div class="posts-show-item">
      <P>
        <%= @post.title%>  
      </P>   
      <p>
        <%= @post.content_ja %>
      </p>
      <p>
        <%= @post.content %>
      </p>
      
    </div>
  </div>
  
  <% @post.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
  
  <%= form_tag("/posts/answer") do %>
  <div class="container">
   <div class="form">
      <div class="posts-show-item">
        <P>回答</P>
        <input name="answer">
        <input type="submit" value="投稿">
      </div>
    </div>
  </div>
  <%end%>
</div>